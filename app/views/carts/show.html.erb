<div class="page-header">
  <%= link_to carts_path, :class => 'btn btn-default' do %>
    <span class="glyphicon glyphicon-list-alt"></span>
    Back
  <% end %>
  <%= link_to edit_cart_path(@cart), :class => 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-pencil"></span>
    Edit
  <% end %>
  <h1>Show cart</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
 
      <tr>
            <th>Title</th>
            <th>Quantity</th>
            <th>Unit Price</th>
            <th>Amount</th>
      </tr>


    <tbody>
      	<% @cart.line_items.each do |item| %>
      	<tr>
            <td><%= item.product.title%></td>
            <td><%= item.quantity %></td>
            <td><%= number_to_currency(item.product.price) %></td>
            <td><%= number_to_currency(item.amount) %></td>
        </tr>
     	<% end %>
 		<tr id="tr-style">
 			<td colspan="3" align="right" ><h4>Total</h4></td>
 			<td style="background: #3399FF"><h4><%= number_to_currency(@cart.total) %></h4></td>
 		</tr>
    </tbody>
  </table>
</div>

<dl class="dl-horizontal">
</dl>
